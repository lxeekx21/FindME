# Database URLs
# Alembic (sync, psycopg2)
DB_URL=postgresql+psycopg2://username:password@localhost:5432/database_name
# App (async, asyncpg)
DB_URL_ASYNC=postgresql+asyncpg://username:password@localhost:5432/database_name

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
